<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CiderTimeMaui.Views.AddLabelPage"
             xmlns:viewmodel="clr-namespace:CiderTimeMaui.ViewModels"
             x:DataType="viewmodel:AddLabelViewModel"
             Title="AddLabelPage">
    <Grid>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <Label Text="Name: "/>
                <Entry Placeholder="Enter name" Text="{Binding Path=Label.Name, Mode=TwoWay}"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label Text="Description: "/>
                <Entry Placeholder="Enter description" Text="{Binding Path=Label.Description, Mode=TwoWay}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <Button Command="{Binding AddLabelCommand}"
                Text="Add Label"
                Margin="8"/>
    </Grid>
</ContentPage>